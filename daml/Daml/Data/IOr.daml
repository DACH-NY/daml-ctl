module Daml.Data.IOr where

import DA.Bifunctor
import Prelude hiding (Left, Right)

data IOr a b
  = Left a
  | Right b
  | Both with left : a ; right : b

instance Bifunctor IOr where
  bimap f g (Left a) = Left (f a)
  bimap f g (Right b) = Right (g b)
  bimap f g (Both a b) = Both (f a) (g b)
